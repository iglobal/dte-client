{
  "name": "dte-client",
  "version": "1.0.9",
  "description": "Cliente DTE Electron para enviar XMLs a Laravel API",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "vue3",
    "dte",
    "xml"
  ],
  "author": "iGlobal",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "35.7.5",
    "electron-builder": "26.6.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "6.4.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "bwip-js": "^4.1.0",
    "chokidar": "^3.5.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "iconv-lite": "0.7.2",
    "mysql2": "3.16.0",
    "nodemailer": "^7.0.13",
    "vue": "^3.4.15"
  },
  "build": {
    "appId": "cl.iglobal.dte-client",
    "productName": "iGlobal DTE Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-renderer/**/*",
      "electron/**/*",
      "public/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "iGlobal DTE Client",
      "artifactName": "iGlobal-DTE-Client-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "iglobal",
      "repo": "dte-client",
      "private": false,
      "releaseType": "release"
    }
  }
}
